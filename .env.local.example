# MongoDB connection string (e.g. MongoDB Atlas)
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/vendorwatch

# Firecrawl API key from https://firecrawl.dev
FIRECRAWL_API_KEY=fc-your-api-key

# Resend API key for email alerts (https://resend.com)
RESEND_API_KEY=re_your-api-key

# Email address to receive risk alerts (required for Resend alerts)
ALERT_EMAIL=your-email@example.com

# Which severities trigger email (comma-separated: low, medium, high). Default: medium,high
# ALERT_SEVERITIES=medium,high

# Anthropic API key for Claude risk analysis (optional - falls back to MVP placeholder if not set)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Reducto API key for document extraction (https://reducto.ai)
REDUCTO_API_KEY=your-reducto-api-key

# Optional: secret for cron endpoint. If set, require Bearer token or x-cron-secret header
CRON_SECRET=your-cron-secret

# Plan tier: basic (5 sites), premium (15), enterprise (500). Default: basic
VENDORWATCH_PLAN=basic
